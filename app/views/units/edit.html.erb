<div class="columns">
  <div class="column is-four-fifth is-flex is-flex-direction-column is-justify-content-center p-0">
    <h1 class="has-text-left mb-0 mt-0 pb-0 pl-3"> Редактирование модуля </h1>
  </div>
</div>
<hr class="mt-3">
<%= form_with model: @unit, url: "/units/#{@unit.id}", method: "put" do |form| %>
  <%= form.hidden_field :redirect_to, value: @redirect_to %>
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <%= form.text_field :title, class: "input" %>
      <% @unit.errors.full_messages_for(:title).each do |message| %>
        <p class="help is-danger"><%= message %></p>
      <% end %>
    </div>
  </div>
  <div class="field">
    <label class="label">Body</label>
    <div class="control">
      <%= form.text_area :body, class: "input" %>
      <% @unit.errors.full_messages_for(:volume).each do |message| %>
        <p class="help is-danger"><%= message %></p>
      <% end %>
    </div>
  </div>
  <div class="is-flex">
    <div class="control mr-4">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <a href="<%=@redirect_to%>" class="button is-link is-light">Cancel</a>
    </div>
  </div>
</div>
<% end %>
<div class="field is-grouped">
</div>
