<div class="columns">
  <div class="column is-four-fifth is-flex is-flex-direction-column is-justify-content-center">
    <h1 class="has-text-left mb-0 mt-0 pb-0"> Новый курс </h1>
  </div>
</div>
<hr class="mt-3">

<%= form_with model: @course do |form| %>


  <div class="field">
    <label class="label">Title</label>
    <div class="control">
      <%= form.text_field :title, class: 'input' %>
      <% @course.errors.full_messages_for(:title).each do |message| %>
        <p class="help is-danger"><%= message %></p>
      <% end %>
    </div>

  </div>

  <div class="field">
    <label class="label">Volume</label>
    <div class="control">
      <%= form.text_field :volume, class: 'input' %>
      <% @course.errors.full_messages_for(:volume).each do |message| %>
        <p class="help is-danger"><%= message %></p>
      <% end %>
    </div>

  </div>

  <div class="field">
    <label class="label">Price in USD</label>
    <div class="control">
      <%= form.number_field :price, class: 'input' %>
      <% @course.errors.full_messages_for(:price).each do |message| %>
        <p class="help is-danger"><%= message %></p>
      <% end %>
    </div>
  </div>

  <div class="is-flex">
    <div class="control mr-4">
      <button class="button is-link">Submit</button>
    </div>
    <div class="control">
      <a href="/courses" class="button is-link is-light">Cancel</a>
    </div>
  </div>
<% end %>

<div class="field is-grouped">

</div>
<style>
    .column a {
        text-decoration: none;
    }
</style>